---
import DocsLayout from '../../layouts/DocsLayout.astro';

const faqSchema = {
  "@context": "https://schema.org",
  "@type": "FAQPage",
  "mainEntity": [
    {
      "@type": "Question",
      "name": "Is hitlimit smaller than rate-limiter-flexible?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Yes, hitlimit is ~7KB while rate-limiter-flexible is ~155KB - that's 22x smaller. hitlimit has zero dependencies while rate-limiter-flexible has several."
      }
    },
    {
      "@type": "Question",
      "name": "How does hitlimit compare to rate-limiter-flexible in performance?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "For single-IP scenarios, rate-limiter-flexible is slightly faster (3.34M vs 3.13M ops/sec). However, hitlimit is 42% faster in high-traffic scenarios with many unique IPs (2.32M vs 1.63M ops/sec)."
      }
    },
    {
      "@type": "Question",
      "name": "Does hitlimit support all the stores that rate-limiter-flexible has?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "hitlimit has built-in Memory, SQLite, and Redis stores. rate-limiter-flexible additionally supports PostgreSQL, MySQL, MongoDB, and cluster modes. Choose rate-limiter-flexible if you need those specific backends."
      }
    },
    {
      "@type": "Question",
      "name": "When should I choose hitlimit over rate-limiter-flexible?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Choose hitlimit for smaller bundle size, native TypeScript, built-in tiered limits, Bun support, or simpler API. Choose rate-limiter-flexible for PostgreSQL/MySQL/MongoDB backends or cluster mode support."
      }
    }
  ]
};

// Code examples as raw strings to avoid JSX parsing issues
const codeRateLimiterBasic = `<span class="kw">import</span> { RateLimiterMemory } <span class="kw">from</span> <span class="str">'rate-limiter-flexible'</span>

<span class="kw">const</span> limiter = <span class="kw">new</span> <span class="fn">RateLimiterMemory</span>({
  points: <span class="num">100</span>,      <span class="cm">// limit</span>
  duration: <span class="num">60</span>,     <span class="cm">// seconds</span>
})

<span class="cm">// Must handle manually in each route</span>
app.<span class="fn">get</span>(<span class="str">'/api'</span>, <span class="kw">async</span> (req, res) => {
  <span class="kw">try</span> {
    <span class="kw">await</span> limiter.<span class="fn">consume</span>(req.ip)
    <span class="cm">// Handle request...</span>
  } <span class="kw">catch</span> (e) {
    res.<span class="fn">status</span>(<span class="num">429</span>).<span class="fn">send</span>(<span class="str">'Too many requests'</span>)
  }
})`;

const codeHitlimitBasic = `<span class="kw">import</span> { hitlimit } <span class="kw">from</span> <span class="str">'@joint-ops/hitlimit'</span>

<span class="kw">const</span> limiter = <span class="fn">hitlimit</span>({
  limit: <span class="num">100</span>,
  window: <span class="str">'1m'</span>  <span class="cm">// Human-readable!</span>
})

<span class="cm">// Works as middleware - automatic!</span>
app.<span class="fn">use</span>(limiter)`;

const codeRateLimiterTiered = `<span class="cm">// Need to create multiple limiters</span>
<span class="kw">const</span> freeLimiter = <span class="kw">new</span> <span class="fn">RateLimiterMemory</span>({
  points: <span class="num">100</span>, duration: <span class="num">60</span>
})
<span class="kw">const</span> proLimiter = <span class="kw">new</span> <span class="fn">RateLimiterMemory</span>({
  points: <span class="num">1000</span>, duration: <span class="num">60</span>
})
<span class="kw">const</span> enterpriseLimiter = <span class="kw">new</span> <span class="fn">RateLimiterMemory</span>({
  points: <span class="num">10000</span>, duration: <span class="num">60</span>
})

<span class="cm">// Then route manually based on user tier</span>
app.<span class="fn">use</span>(<span class="kw">async</span> (req, res, next) => {
  <span class="kw">const</span> tier = <span class="fn">getUserTier</span>(req)
  <span class="kw">const</span> limiter = tier === <span class="str">'enterprise'</span>
    ? enterpriseLimiter
    : tier === <span class="str">'pro'</span>
      ? proLimiter
      : freeLimiter
  <span class="kw">try</span> {
    <span class="kw">await</span> limiter.<span class="fn">consume</span>(req.ip)
    <span class="fn">next</span>()
  } <span class="kw">catch</span> (e) {
    res.<span class="fn">status</span>(<span class="num">429</span>).<span class="fn">send</span>(<span class="str">'Too many requests'</span>)
  }
})`;

const codeHitlimitTiered = `<span class="kw">const</span> limiter = <span class="fn">hitlimit</span>({
  window: <span class="str">'1m'</span>,
  tiers: {
    free:       { limit: <span class="num">100</span> },
    pro:        { limit: <span class="num">1000</span> },
    enterprise: { limit: <span class="num">10000</span> }
  },
  getTier: (req) => <span class="fn">getUserTier</span>(req)
})

app.<span class="fn">use</span>(limiter) <span class="cm">// That's it!</span>`;

const codeMigrationBefore = `<span class="kw">import</span> { RateLimiterMemory } <span class="kw">from</span> <span class="str">'rate-limiter-flexible'</span>

<span class="kw">const</span> rateLimiter = <span class="kw">new</span> <span class="fn">RateLimiterMemory</span>({
  points: <span class="num">100</span>,
  duration: <span class="num">60</span>,
  keyPrefix: <span class="str">'api'</span>
})

<span class="kw">const</span> middleware = <span class="kw">async</span> (req, res, next) => {
  <span class="kw">try</span> {
    <span class="kw">await</span> rateLimiter.<span class="fn">consume</span>(req.ip)
    <span class="fn">next</span>()
  } <span class="kw">catch</span> (rejRes) {
    res.<span class="fn">status</span>(<span class="num">429</span>).<span class="fn">json</span>({
      message: <span class="str">'Too Many Requests'</span>,
      retryAfter: Math.<span class="fn">round</span>(rejRes.msBeforeNext / <span class="num">1000</span>)
    })
  }
}

app.<span class="fn">use</span>(middleware)`;

const codeMigrationAfter = `<span class="kw">import</span> { hitlimit } <span class="kw">from</span> <span class="str">'@joint-ops/hitlimit'</span>

<span class="kw">const</span> limiter = <span class="fn">hitlimit</span>({
  limit: <span class="num">100</span>,
  window: <span class="str">'1m'</span>,
  prefix: <span class="str">'api'</span>
})

app.<span class="fn">use</span>(limiter) <span class="cm">// Headers and 429 handled automatically</span>`;
