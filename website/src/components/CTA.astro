<section class="py-24 px-4">
  <div class="max-w-4xl mx-auto">
    <div class="relative rounded-3xl border border-[var(--color-border)] bg-[var(--color-bg-surface)] p-12 sm:p-16 text-center overflow-hidden">
      <!-- Background glow -->
      <div class="absolute top-0 left-1/2 -translate-x-1/2 w-[600px] h-[300px] bg-[radial-gradient(ellipse_at_top,rgba(0,229,255,0.15),transparent_70%)]"></div>
      <div class="absolute bottom-0 left-0 w-[300px] h-[300px] bg-[radial-gradient(ellipse_at_center,rgba(168,85,247,0.1),transparent_70%)]"></div>

      <!-- Content -->
      <div class="relative">
        <h2 class="text-3xl sm:text-4xl lg:text-5xl font-bold tracking-tight mb-6">
          Ready to protect your API?
        </h2>
        <p class="text-lg text-[var(--color-text-secondary)] max-w-xl mx-auto mb-10">
          Get started in under 5 minutes. No credit card required. Free forever for open source.
        </p>

        <div class="flex flex-col sm:flex-row items-center justify-center gap-4">
          <a
            href="/docs/quick-start"
            class="w-full sm:w-auto px-8 py-4 rounded-xl bg-gradient-to-r from-[var(--color-accent)] to-[var(--color-accent-secondary)] text-black font-semibold text-lg transition-all duration-300 hover:shadow-[0_0_40px_rgba(0,229,255,0.5)] hover:-translate-y-1 flex items-center justify-center gap-2"
          >
            Start Building
            <svg class="w-5 h-5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5">
              <path d="M5 12h14M12 5l7 7-7 7" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
          </a>
          <a
            href="/docs"
            class="w-full sm:w-auto px-8 py-4 rounded-xl border border-[var(--color-border)] text-white font-semibold text-lg transition-all duration-300 hover:bg-white/5 hover:border-[var(--color-border-hover)] flex items-center justify-center gap-2"
          >
            Read the Docs
          </a>
        </div>

        <!-- Trust badges -->
        <div class="mt-12 flex flex-wrap items-center justify-center gap-6 text-[var(--color-text-muted)]">
          <div class="flex items-center gap-2">
            <svg class="w-5 h-5" viewBox="0 0 24 24" fill="currentColor">
              <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
            </svg>
            <span class="text-sm">Open Source</span>
          </div>
          <div class="flex items-center gap-2">
            <svg class="w-5 h-5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
            <span class="text-sm">MIT License</span>
          </div>
          <div class="flex items-center gap-2">
            <svg class="w-5 h-5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M22 11.08V12a10 10 0 11-5.93-9.14" stroke-linecap="round" stroke-linejoin="round"/>
              <path d="M22 4L12 14.01l-3-3" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
            <span class="text-sm">Production Ready</span>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
